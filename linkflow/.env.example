# LinkFlow Environment Configuration
# Copy this file to .env.local and fill in the values for your environment

# Node.js environment (development, production, test)
NODE_ENV=development

# Server Configuration
PORT=3000
HOST=localhost

# JWT Secret for authentication tokens
# IMPORTANT: Generate a strong random string for production
# Example: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRATION=7d

# Database Configuration
DATABASE_PATH=./data/linkflow.db
DATABASE_URL=postgresql://linkflow:linkflow-dev-password@localhost:5432/linkflow

# PostgreSQL Configuration (if using Docker)
DB_USER=linkflow
DB_PASSWORD=linkflow-dev-password
DB_NAME=linkflow
DB_HOST=postgres
DB_PORT=5432

# Plugins Configuration
PLUGINS_PATH=./plugins
PLUGINS_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000
API_CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# MCP (Model Context Protocol) Integration
MCP_ENABLED=true
MCP_SERVER_ENDPOINT=http://localhost:3001
CLAUDE_API_KEY=your-claude-api-key-for-mcp-integration

# Email Configuration (optional, for notifications/invites)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@linkflow.app

# Social Login Configuration (optional)
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# Analytics (optional)
ANALYTICS_ENABLED=false
ANALYTICS_PROVIDER=posthog
POSTHOG_KEY=

# Feature Flags
FEATURE_PLUGINS_ENABLED=true
FEATURE_MCP_INTEGRATION_ENABLED=true
FEATURE_CUSTOM_DOMAINS_ENABLED=false
FEATURE_ANALYTICS_ENABLED=false

# Sentry Error Tracking (optional)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# Debug Mode
DEBUG=linkflow:*
