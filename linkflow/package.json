{
  "name": "linkflow",
  "version": "1.0.0",
  "private": true,
  "description": "Free & open-source link-in-bio platform with MCP integration",
  "license": "MIT",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=apps/web",
    "dev:mcp": "npm run dev --workspace=apps/mcp-server",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:mcp\"",
    "build": "npm run build --workspace=apps/web",
    "build:mcp": "npm run build --workspace=apps/mcp-server",
    "start": "npm run start --workspace=apps/web",
    "start:all": "concurrently \"npm run start\" \"npm run start:mcp\"",
    "migrate": "node scripts/migrate-db.js",
    "seed": "node scripts/seed.js",
    "deploy": "fly deploy --dockerfile docker/Dockerfile",
    "deploy:setup": "fly launch --name free-linkmoa --region nrt",
    "lint": "eslint .",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "typescript": "^5.3.3"
  }
}
